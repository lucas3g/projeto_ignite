{
    "extends": "@rocketseat/eslint-config/node",
    "rules": {
        "no-useless-constructor": "off",
        "no-new": "off",
        "camelcase": "off",
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "printWidth": 80,
                "tabWidth": 2,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "es5",
                "bracketSpacing": true,
                "jsxBracketSameLine": false
            }
    
          ]       
    } 
}